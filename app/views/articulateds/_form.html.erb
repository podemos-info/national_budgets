<%= bootstrap_form_for([amendment.becomes(Amendment), articulated.becomes(Articulated)], layout: :horizontal, label_col: "col-sm-3 text-sm-right", control_col: "col-sm-7") do |f| %>
  <% if articulated.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(articulated.errors.count, "error") %> prohibited this articulated from being saved:</h2>

      <ul>
      <% articulated.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.collection_radio_buttons :type, Articulated.descendants.map{|a| [a.to_s, a.new.type_name]}, :first, :last, custom: :switch, inline: true, wrapper_class: 'align-items-center type' %>
  
  <%= f.collection_select :section_id, budget.sections.all, :id, :full_title %>
  <%= f.text_field :title %>
  <%= f.text_area :text %>
  <%= f.text_area :justification %>
  <%= f.text_field :number, wrapper_class: 'number' %>

  <div class="actions">
    <%= f.submit class: 'btn btn-success' %>
    <%= link_to t('helpers.action.back'), amendment_path(amendment), class: 'btn btn-danger' %>
  </div>
<% end %>

<script type="text/javascript">
  $(function () {
    $(".form-group.type input").change(function () {
      var type = $(this).val();
      if (type == "Articulateds::StandardArticulated") {
        $(".form-group.number").show();
      } else {
        $(".form-group.number").hide();
      }
    });
  });
  $( document ).ready(function() {
      $("#type input").change();
  });
  
</script>
