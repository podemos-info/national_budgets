<p id="notice"><%= notice %></p>

<h1>Amendments</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Type</th>
      <th>Explanation</th>
      <th>User</th>
      <th>Budget</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @amendments.each do |amendment| %>
      <tr>
        <td><%= amendment.number %></td>
        <td><%= amendment.type_name %></td>
        <td><%= amendment.explanation %></td>
        <td><%= amendment.user.email %></td>
        <td><%= amendment.budget.title %></td>
        <td><%= link_to 'Show', amendment %></td>
        <td><%= link_to 'Edit', edit_amendment_path(amendment) %></td>
        <td><%= link_to 'Destroy', amendment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Amendment', new_amendment_path %>
