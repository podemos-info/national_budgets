<p id="notice"><%= notice %></p>

<h1><%= t('.title', budget: budget.title) %></h1>

<table>
  <thead>
    <tr>
      <th><%= Amendment.human_attribute_name(:number) %></th>
      <th><%= Amendment.human_attribute_name(:type) %></th>
      <th><%= Amendment.human_attribute_name(:explanation) %></th>
      <th><%= Amendment.human_attribute_name(:user) %></th>
      <th><%= Amendment.human_attribute_name(:budget) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% amendments.each do |amendment| %>
      <tr>
        <td><%= amendment.number %></td>
        <td><%= amendment.type_name %></td>
        <td><%= amendment.explanation %></td>
        <td><%= amendment.user.email %></td>
        <td><%= amendment.budget.title %></td>
        <td><%= link_to t('helpers.action.show'), amendment_path(amendment) %></td>
        <td><%= link_to t('helpers.action.edit'), edit_amendment_path(amendment) %></td>
        <td><%= link_to t('helpers.action.destroy'), amendment_path(amendment), method: :delete, data: { confirm: t('helpers.messages.are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('amendments.new.title'), new_budget_amendment_path(budget) %>
